{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build Cliq.Server",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/Cliq.Server/Cliq.Server.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "NSwag: Generate TypeScript Client",
      "type": "shell",
      "command": "dotnet \"/Users/robertwetzler/.nuget/packages/nswag.msbuild/14.2.0/tools/Net80/dotnet-nswag.dll\" run nswag.json",
      "options": {
        "cwd": "${workspaceFolder}/src/Cliq.Server"
      },
      "problemMatcher": []
    },
    {
      "label": "gen-dev-cert",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/gen-dev-cert.sh",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "gen-dev-ip-https",
      "type": "shell",
      "command": "DEV_FORCE_HTTPS=1 node ${workspaceFolder}/src/cliq.client/scripts/gen-dev-ip.js",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "gen-cert-and-build",
      "dependsOn": ["gen-dev-cert", "gen-dev-ip-https", "build Cliq.Server"],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "group": "build"
    }
  ]
}

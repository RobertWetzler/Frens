{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: Cliq.Server Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/src/Cliq.Server/Cliq.Server.csproj",
            "justMyCode": false,
            "requireExactSource": false,
            "suppressJITOptimizations": true,
            "enableStepFiltering": false,
            "env": {
                "DOTNET_EnableSourceLink": "1"
            },
            "symbolOptions": {
                "searchMicrosoftSymbolServer": true,
                "searchNuGetOrgSymbolServer": true,
                "cachePath": "/Users/robertwetzler/.dotnet/symbolcache",
                "moduleFilter": {
                    "mode": "loadAllButExcluded",
                    "excludedModules": []
                }
            },
            "sourceLinkOptions": {
                "*": {
                    "enabled": true
                }
            }
        }
        ,
        {
            "name": "C#: Cliq.Server (no rebuild)",
            "type": "coreclr",
            "request": "launch",
            // Launch prebuilt assembly directly; ensure you've built once so DLL exists.
            "program": "${workspaceFolder}/src/Cliq.Server/bin/Debug/net8.0/Cliq.Server.dll",
            "cwd": "${workspaceFolder}/src/Cliq.Server",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "justMyCode": false
        }
    ]
}